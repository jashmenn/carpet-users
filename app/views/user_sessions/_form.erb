<%= form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <table class="login">
      <tbody>
          <tr>
              <td class="label"><%= f.label :login %>:</td>
              <td><%= f.text_field :login %></td>
          </tr>
          <tr>
              <td class="label"><%= f.label :password %>:</td>
              <td><%= f.password_field :password %></td>
          </tr>
          <tr>
              <td class="label"><%= f.label :remember_me %>:</td>
              <td class="text-left"><%= f.check_box :remember_me %></td>
          </tr>
      </tbody>
  </table>
  <%= f.submit "Login" %>

<% end %>
